{% extends 'base.html.twig' %}

{% block container  %}

    <!-- Page Content -->
    <div class="container">

    <div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">

            <!-- Title -->
            <h1 class="mt-4">{{ title|upper }}</h1>

            <!-- Author -->
            <p class="lead">

                <a>Home</a>
            </p>

            <hr>

            <!-- Date/Time -->
            <p>{{ date|date }}</p>

            <hr>

            <!-- Preview Image -->
            <img class="img-fluid rounded" src="{{ asset('uploads/post/' ~ photo) }}" alt="{{ title }}">

            <hr>

            <!-- Post Content -->
            <p class="lead">{{ descripion }}</p>
            <p class="lead">{{ activite.animateur.nomanimateur }}</p>




            <hr>

            <!-- Comments Form -->
            <div class="card my-4">
                <h5 class="card-header">Leave a Comment:</h5>
                <div class="card-body">
                    <form  method="post" id="comment">
                        <div class="form-group">

                            <textarea class="form-control" rows="3" name="comment" placeholder="Comment here"></textarea>

                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>


        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->

{% endblock %}