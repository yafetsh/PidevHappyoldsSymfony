
{% extends 'base.html.twig' %}
{#{% block header %} {% endblock %}#}
{% block container %}
<div class="right_col" role="main">
    <div class="">

    <h1 class="title">Action de bénévolat </h1>

    <table class="table table-bordered">
        <thead align="1">
            <tr>

                <th>Date debut</th>
                <th>Date fin</th>
                <th>Description</th>
                <th>Etat</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
        {% for actionBenevole in actionBenevoles %}
            <tr>

                <td>{% if actionBenevole.dateDAction %}{{ actionBenevole.dateDAction|date('Y-m-d') }}{% endif %}</td>
                <td>{% if actionBenevole.dateFAction %}{{ actionBenevole.dateFAction|date('Y-m-d') }}{% endif %}</td>
                <td>{{ actionBenevole.description }}</td>
                <td>{{ actionBenevole.etat }}</td>
                <td>
                    <ul>


                            <a class="btn btn-danger" href="{{ path('edit',{'id':actionBenevole.idAction})}}">edit</a>


                            <a class="btn btn-primary" href="{{ path('delete',{'id':actionBenevole.idAction})}}">delete</a>

                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>

            <a class="btn btn-dark" href="{{ path('new') }}">Créer une nouvelle action de benevolat</a>

    </ul>
    <div class="navigation">
        {{ knp_pagination_render(actionBenevoles) }}
    </div>

{% endblock %}

