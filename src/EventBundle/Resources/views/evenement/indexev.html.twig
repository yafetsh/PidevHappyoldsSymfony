{% extends 'base.html.twig' %}
{#{% block header %} {% endblock %}#}
{% block container %}


    <h1>liste des evenements </h1>

    <table>
        <thead>
            <tr>

                <th>Date debut</th>
                <th>Date fin</th>
                <th>Heure</th>
                <th>Nome</th>
                <th>Adresse</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>

                <td>{% if evenement.dateDEvenement %}{{ evenement.dateDEvenement|date('Y-m-d') }}{% endif %}</td>
                <td>{% if evenement.dateFEvenement %}{{ evenement.dateFEvenement|date('Y-m-d') }}{% endif %}</td>
                <td>{{ evenement.heureEvenement }}</td>
                <td>{{ evenement.nomEvenement }}</td>
                <td>{{ evenement.adresseEvenement }}</td>
                <td>{{ evenement.descriptionEvenement }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('editev', { 'id': evenement.idEvenement }) }}">edit</a>
                        </li>
                        <li>
                            <a href="{{ path('deleteev', { 'id': evenement.idEvenement }) }}">delete</a>
                        </li>
                        <li>
                            <a href="{{ path('participer', { 'evenementId': evenement.idEvenement }) }}">Participer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('newev') }}">Create a new evenement</a>
        </li>
    </ul>
{% endblock %}

