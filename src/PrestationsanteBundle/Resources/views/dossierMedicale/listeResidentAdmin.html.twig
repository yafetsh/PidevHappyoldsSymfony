    <div class="col-md-6 col-sm-6 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <ul class="nav navbar-right panel_toolbox">
                    <li><a class="collapse-link"><h3>Liste des residents</h3></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#">Settings 1</a>
                            </li>
                            <li><a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li><a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                <table class="table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Action</th>

                    </tr>
                    </thead>
                    <tbody>
                    {% for i in r %}
                    <tr>

                        <th scope="row">{{ i.idResident }}</th>
                        <td>{{ i.nomResident }}</td>
                        <td>{{ i.prenomResident }}</td>

                        {% set dossierexist = 0 %}
                        {% for dossier in d %}

                            {% if i.idResident == dossier.idResident.idResident %}
                                {% set dossierexist =1 %}
                            {% endif %}
                        {% endfor %}

                        {% if dossierexist==1 %}
                        <td><a href="{{ path('afficher_dossier_par_resident_pour_admin',{'id':i.idResident })}}">afficher dossier</a> </td>
                        {% endif %}

                        {% set residentexist =0 %}
                        {% for prestation in p %}

                            {% if i.idResident == prestation.idResident.idResident %}
                                {% set residentexist=1 %}
                            {% endif %}
                        {% endfor %}

                        {% if residentexist==1 %}
                        <td><a href="{{ path('afficher_fiche_par_resident_pour_admin',{'id':i.idResident })}}">afficher fiches</a> </td>
                        {% endif %}
                    </tr>
                    {% endfor %}

                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <a href="{{ path('afficher_liste_dossier_pour_admin')}}" class="btn btn-success" role="button">afficher tous les dossiers</a>

